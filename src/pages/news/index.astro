			<section>
				<ul>
					{
						news.map((post) => (
							<li>
								<a href={`/news/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage?.src ?? '/blog-placeholder-2.jpg'} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.tags && (
										<div class="tags">
											{post.data.tags.map(tag => (
												<span class="tag">{tag}</span>
											))}
										</div>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
