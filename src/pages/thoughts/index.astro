---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import FormattedDate from '../../components/FormattedDate.astro';

const thoughts = (await getCollection('thoughts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`ÊÄùË∑ØËÆ∞ÂΩï | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			.category {
				display: inline-block;
				background: rgb(var(--accent));
				color: white;
				padding: 0.2rem 0.8rem;
				border-radius: 12px;
				font-size: 0.85rem;
				margin-top: 0.5rem;
			}
			.status {
				display: inline-block;
				margin-left: 0.5rem;
				font-size: 0.8rem;
				padding: 0.1rem 0.5rem;
				border-radius: 4px;
			}
			.status.draft { background: #fbbf24; color: #000; }
			.status.published { background: #10b981; color: #fff; }
			.status.archived { background: #6b7280; color: #fff; }
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>üí° ÊÄùË∑ØËÆ∞ÂΩï</h1>
			<p>ÊÉ≥Ê≥ï„ÄÅÁ¨îËÆ∞„ÄÅÁÅµÊÑüÊî∂ÈõÜ</p>
			<section>
				<ul>
					{
						thoughts.map((post) => (
							<li>
								<a href={`/thoughts/${post.id}/`}>
									<img width={720} height={360} src={post.data.heroImage?.src ?? '/blog-placeholder-4.jpg'} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.category && <span class="category">{post.data.category}</span>}
									<span class={`status ${post.data.status}`}>{post.data.status}</span>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
